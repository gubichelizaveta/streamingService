                <StackPanel Orientation="Horizontal" Width="1080" Height="40">
                    <TextBlock  Text="#" FontSize="18" VerticalAlignment="Center" Margin="12,12,0,11" FontFamily="Lucida Console" Foreground="DarkGray"></TextBlock>
                    <TextBlock Text="НАЗВАНИЕ" FontSize="18" VerticalAlignment="Center" FontFamily="Lucida Console" Margin="14,11,0,11" Foreground="DarkGray" Width="360"/>
                    <TextBlock Text="АЛЬБОМ" FontSize="18" VerticalAlignment="Center" FontFamily="Lucida Console" Margin="10,11,0,11" Foreground="DarkGray" Width="320"/>
                    <TextBlock Text="ИСПОЛНИТЕЛЬ" FontSize="18" VerticalAlignment="Center" FontFamily="Lucida Console" Margin="10,11,0,11" Foreground="DarkGray" Width="340"/>
                </StackPanel>
                <Line Stroke="LightBlue" StrokeThickness="4" X1="0" Y1="0" X2="1080" Y2="0" Margin="0" ></Line>
            </StackPanel>
        <ScrollViewer Margin="0,138,0,-0.4">

