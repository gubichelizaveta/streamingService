<Window x:Class="course_project.Views.Autorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:course_project.Views"
        mc:Ignorable="d"
        Title="Autorization" Height="580" Width="800" Loaded="Window_Loaded">

    <Grid>
        <!--<Frame Width="800" x:Name="Authorization"></Frame>-->
        <StackPanel Width="400" Height="550">
            <StackPanel Orientation="Horizontal" Height="40" >
                <Button Width="200" Content="Авторизоваться" Click="SignIn_Click"></Button>
                <Button Width="200" Content="Зарегистрироваться" Click="Registration_Click"></Button>
            </StackPanel>
            <Frame Width="400" Height="520" x:Name="autorization" NavigationUIVisibility="Hidden"></Frame>
        </StackPanel>
    </Grid>
    
</Window>
