            </StackPanel>
            <StackPanel Grid.Column="0"  Height="64" Margin="0,20,0,0" Orientation="Horizontal">
                <Image Source="/images/loupe (1).png" Width="32" Margin="32,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" MouseDown="Search_MouseDown"/>
                <TextBlock Text="Поиск" FontFamily="Century" FontSize="28" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="32,0,0,0"></TextBlock>
            </StackPanel>
            <StackPanel Grid.Column="0"  Height="64" Margin="0,20,0,0" Orientation="Horizontal">
                <Image Source="/images/media.png" Width="32" Margin="32,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"  MouseDown="Mediateka_MouseDown" />
                    <TextBlock Text="Медиатека" FontFamily="Century" FontSize="28" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="32,0,0,0"></TextBlock>
            </StackPanel>
            <StackPanel Grid.Column="0"  Height="64" Margin="0,40,0,0" Orientation="Horizontal">
                <Image  Width="32" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="32,0,0,0" Source="/images/newadd.png" MouseDown="Playlist_MouseDown" />
                    <TextBlock Text="Создать плейлист" FontFamily="Century" FontSize="20" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="26,0,0,0"></TextBlock>
            </StackPanel>
            <StackPanel Grid.Column="0"  Height="64" Margin="0,10,0,0" Orientation="Horizontal">
                <Image  Width="32" VerticalAlignment="Center" Margin="32,0,0,0" HorizontalAlignment="Center" Source="/images/newlike.png" MouseDown="Liked_MouseDown"/>
                <TextBlock Text="Любимые треки" FontFamily="Century" FontSize="20" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="26,0,0,0"></TextBlock>
            </StackPanel>
            <Button x:Name="filtr" Content="Настроить рекомендации" Width="210" Height="32" Margin="0,20,0,0" Click="filtr_Click"></Button>
        </StackPanel>
        <Frame x:Name="frame" Grid.Column="1" Content="{Binding  CurrentPage}" HorizontalAlignment="Left" Height="800" Margin="0,-1,0,0" VerticalAlignment="Top" Width="1160" NavigationUIVisibility="Hidden"/>
